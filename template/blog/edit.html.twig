<form action="{{ _GET.id == "new" ? '/blog/new' : '/blog/update/' ~ _GET.id }}" method="POST">
	<div class="container">
		{{ _GET['id'] }}
		<div class="row">
			<div class="col">

				<h1 class="text-center"><input type="text" name="title" id="title" value="{{ article.getTitle()}} "></h1>
				<div class="d-flex justify-content-between">
					<a href="/blog/edit/{{article.getId()}} " class="btn btn-secondary">Modifier</a>
					<p class="text-end">Publié le
						{{ article.getCreated_at().format('d/m/Y à H:i') }}

					</p>
				</div>
				<div class="col-12">
					<textarea class="col-12" id="exemple" name="content">{{article.getRawContent()}}</textarea>
				</div>
				<input type="hidden" name="id" value="{{_GET['id']}} ">
				<input type="submit" value="Envoyer" name="submit" class="mt-3 btn btn-primary float-end">
			</div>
		</div>
	</div>

</form>
<script src="minified/sceditor.min.js"></script>
<script src="minified/formats/bbcode.js"></script>
<script src="minified/formats/xhtml.js"></script>
<script>
	let textarea = document.getElementById('exemple');
textarea.style.minHeight = '200px';
textarea.style.height = textarea.scrollHeight + 'px';
sceditor.create(textarea, {

resizeEnabled: false,
autoExpand: true,
autoUpdate: true,
fonts: 'Arial,Helvetica,sans-serif, Consolas, monospace',
format: 'bbcode',
style: 'minified/themes/content/default.min.css'
});
</script>
